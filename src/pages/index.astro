---
import { getCollection } from "astro:content";
import BaseLayout from "../layouts/BaseLayout.astro";

const posts = await getCollection("blog");
---

<BaseLayout>
	<ul class="w-full">
		{
			posts.map((post) => (
				<li class="w-full h-48 border rounded p-4 flex justify-center items-start relative mb-2">
					<div class="">
						<a
							href={`/blog/${post.slug}/`}
							class=" text-black inline-block text-xl font-bold hover:text-red-500 no-underline"
						>
							{post.data.title}
						</a>

						<p class="text-sm text-gray-400">
							{post.data.pubDate.toLocaleDateString("zh-CN")}
						</p>
					</div>
				</li>
			))
		}
	</ul>
</BaseLayout>
